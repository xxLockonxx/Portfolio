<mapper namespace="kr.co.jessiemarket.dao.MemberDao">

	<select id="selectCountUid" resultType="kr.co.jessiemarket.vo.ResultVo">
		SELECT COUNT(`uid`) AS `result` FROM `jessie_member` WHERE `uid`=#{uid};
	</select>
	
	<select id="selectMember" resultType="kr.co.jessiemarket.vo.MemberVo">
		SELECT * FROM `jessie_member` WHERE `uid`=#{uid} AND `pass`=#{pass};
	</select>
	

