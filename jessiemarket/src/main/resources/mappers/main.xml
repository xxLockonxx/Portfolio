<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.jessiemarket.dao.MainDao">
	
	<resultMap id="categoriesMap" type="kr.co.jessiemarket.vo.CategoriesVo">
	    <result property="code1" column="code1" />
	    <result property="title" column="tit1" />
		
	    <collection property="cate2List" ofType="kr.co.jessiemarket.vo.Category2Vo">
	         <id property="seq" column="seq" />
	         <result property="code1" column="code1" />
	         <result property="code2" column="code2" />
	         <result property="title" column="tit2" />
	    </collection>
	</resultMap>
	
	<select id="selectCategories" resultMap="categoriesMap">
		SELECT c1.`code1`, c2.`code2`, c1.`title` AS tit1, c2.`title` AS tit2
		FROM `jessie_category1` AS c1
		JOIN `jessie_category2` AS c2
		ON c1.code1 = c2.code1
		ORDER BY c1.`code1`, c2.`code2`;		
	</select>

	<select id="selectHitProduct" resultType="kr.co.jessiemarket.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `jessie_products` 
		ORDER BY `hit` DESC 
		LIMIT 10;
	</select>
	
	<select id="selectBestProduct" resultType="kr.co.jessiemarket.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `jessie_products` 
		ORDER BY `sold` DESC 
		LIMIT 10;
	</select>
	
	<select id="selectRecProduct" resultType="kr.co.jessiemarket.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `jessie_products` 
		ORDER BY `score` DESC 
		LIMIT 10;
	</select>
	
	<select id="selectNewProduct" resultType="kr.co.jessiemarket.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `jessie_products` 
		ORDER BY `rdate` DESC 
		LIMIT 10;
	</select>
	
	<select id="selectDiscountProduct" resultType="kr.co.jessiemarket.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `jessie_products` 
		ORDER BY `discount` DESC 
		LIMIT 10;
	</select>



